.recommend .swiper {
  height: 350rpx;
}
.recommend .swiper image {
  width: 100%;
  height: 350rpx;
}
.recommend .policyList {
  display: flex;
  margin: 10rpx 0;
}
.recommend .policyList .policyItem {
  flex: 1;
  text-align: center;
}
.recommend .policyList .policyItem image {
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}
.recommend .policyList .policyItem text {
  font-size: 24rpx;
}
.recommend .kingkongList {
  display: flex;
  flex-wrap: wrap;
}
.recommend .kingkongList .kingkongItem {
  text-align: center;
  width: 20%;
  margin: 10rpx 0;
}
.recommend .kingkongList .kingkongItem .kingkongImg {
  width: 100rpx;
  height: 100rpx;
}
.recommend .kingkongList .kingkongItem .kingkongDesc {
  font-size: 24rpx;
}
.recommend .categoryList .categoryItem {
  margin: 10rpx 0;
}
.recommend .categoryList .categoryItem .categoryImg {
  height: 370rpx;
  width: 100%;
}
.recommend .categoryList .categoryItem .categoryScroll {
  height: 300rpx;
  display: flex;
}
.recommend .categoryList .categoryItem .categoryScroll .goodsItem {
  height: 300rpx;
  margin: 0 8rpx;
}
.recommend .categoryList .categoryItem .categoryScroll .goodsItem .goodsImg {
  background-color: #f5f5f5;
  height: 200rpx;
  width: 200rpx;
}
.recommend .categoryList .categoryItem .categoryScroll .goodsItem .goodsText {
  font-size: 26rpx;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


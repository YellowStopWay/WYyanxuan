  height: 360rpx;
}
.cateList .swiper image {
  width: 100%;
  height: 360rpx;
}
.cateList .title {
  font-size: 38rpx;
  line-height: 80rpx;
  color: #333;
  text-align: center;
}
.cateList .desc {
  font-size: 30rpx;

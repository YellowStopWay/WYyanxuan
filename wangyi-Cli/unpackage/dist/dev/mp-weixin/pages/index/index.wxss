.indexContainer .header {
  display: flex;
  padding: 10rpx 5rpx;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 40rpx;
  margin-top: 10rpx;
}
.indexContainer .header .search {
  width: 420rpx;
  height: 60rpx;
  background: #f5f5f5;
  position: relative;
}
.indexContainer .header .search input {
  width: 360rpx;
  height: 60rpx;
  margin-left: 60rpx;
}
.indexContainer .header .search input .placeholder {
  font-size: 26rpx;
  color: #333;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  font-size: 40rpx;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  padding: 0 4rpx;
}
.indexContainer .navScroll {
  display: flex;
  height: 80rpx;
  white-space: nowrap;
}
.indexContainer .navScroll .navItem {
  display: inline-block;
  height: 40rpx;
  padding: 10rpx;
  font-size: 26rpx;
}
.indexContainer .navScroll .navItem.active {
  border-bottom: 3rpx solid #bb2c08;
  color: #bb2c08;
}


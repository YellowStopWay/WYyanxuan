.cart {
  background-color: #f5f5f5;
}
.cart .cartList .cartItem {
  height: 172rpx;
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  position: relative;
  overflow: hidden;
}
.cart .cartList .cartItem .iconfont {
  font-size: 40rpx;
  line-height: 172rpx;
}
.cart .cartList .cartItem .iconfont.selected {
  color: #f00;
}
.cart .cartList .cartItem .goodsItem {
  display: flex;
}
.cart .cartList .cartItem .goodsItem image {
  height: 172rpx;
  width: 172rpx;
  background-color: #ccc;
  margin: 0 40rpx;
}
.cart .cartList .cartItem .goodsItem .goodsInfo .name {
  font-size: 26rpx;
  margin: 10rpx;
}
.cart .cartList .cartItem .goodsItem .goodsInfo .price {
  color: #f00;
}
.cart .cartList .cartItem .countCtrl {
  position: absolute;
  bottom: 30rpx;
  right: 60rpx;
}
.cart .cartList .cartItem .countCtrl text {
  border: 1px solid #ddd;
  padding: 8rpx 28rpx;
}
.cart .cartList .cartItem .countCtrl text:nth-child(2) {
  border: none;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.cart .footer {
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  text-align: center;
  border-top: 1rpx solid #ccc;
}
.cart .footer .left {
  flex: 1;
  text-align: center;
  width: 40rpx;
}
.cart .footer .left text {
  margin-right: 10rpx;
}
.cart .footer .left .selected {
  color: #dd1a21;
}
.cart .footer .right {
  flex: 3;
  position: relative;
}
.cart .footer .right .btn {
  text-align: center;
  position: absolute;
  right: 36%;
}
.cart .footer .right .btn.order {
  right: 0;
  display: inline-block;
  width: 34%;
  background-color: #f00;
  color: #fff;
}

